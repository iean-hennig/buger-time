<div class="center">
  <h1> Burger time!</h1>
</div>
<div class="wrap">
<h2>You should eat these...</h2>
<h2>These have been eaten!</h2>


  <div class="eat-left">


    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class="eaten-right">


    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

<div class="center">
  <h2>Add a Burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Name Your Burger:</label>
      <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
  </form>
</div>
</div>